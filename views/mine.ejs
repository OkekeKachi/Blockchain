<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Block Mined</title>
    <!-- Materialize CSS -->
    <link rel="stylesheet" href="/materialize.css">
    <link rel="stylesheet" href="/styles.css">
    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Funnel+Display:wght@300..800&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
        rel="stylesheet">
</head>

<body>
    <header>
        <%- include('partials/navbar') %>
    </header>
    
    <!-- Main Content -->
    <main>
        <br><br><br><br>
        <div class="container">            
            <div class="card">            
                <div class="card-content">
                    <% if(block){ %>
                    <h3>New Block Mined</h3>
                    <div class="center-align">
                        <a href="/blockchain" class="back">View Blockchain</a>
                    </div>
                    <section>                        
                        <h4>Block Details</h4>                        
                        <pre class="pre"><%= JSON.stringify(block, null, 2) %></pre>
                        
                           
                    </section>
                </div>
            </div>
            <% }else{ %>
                <h4 style="text-align: center;">You have no mined blocks Yet</h4>
            <% } %>
        </div>
    </main>

    <!-- Footer -->
    <div style="background-color: rgb(82, 116, 154);" align="center">
        <p class="white-text">&copy; 2025 Evian Blockchain. All rights reserved.</p>
    </div>

    <!-- Materialize JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const sidenav = document.querySelectorAll('.sidenav');
            M.Sidenav.init(sidenav);
        });
    </script>
</body>

</html>